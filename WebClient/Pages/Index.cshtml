@page
@model IndexModel
@{
    Layout = "TemplateLayout";
    ViewData["Title"] = "Trang chủ - Library Management System";
}

<!-- Hero Section -->
<section class="hero-section section-padding">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">Chào mừng đến với Hệ thống Quản lý Thư viện</h1>
                    <p class="hero-subtitle">Khám phá kho tàng sách phong phú và mượn sách trực tuyến một cách dễ dàng</p>
                    <div class="hero-buttons">
                        <a href="/Book/List" class="btn btn-primary btn-lg mr-3">
                            <i class="ti-book mr-2"></i>Xem danh sách sách
                        </a>
                        @if (string.IsNullOrEmpty(HttpContext.Request.Cookies["JWToken"]))
                        {
                            <a href="/Auth/Login" class="btn btn-outline-primary btn-lg">
                                <i class="ti-user mr-2"></i>Đăng nhập
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <img src="~/template/images/hero-books.jpg" alt="Library Books" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section section-padding bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center mb-5">
                    <h2>Tính năng nổi bật</h2>
                    <p>Hệ thống quản lý thư viện hiện đại với nhiều tính năng tiện ích</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="ti-search" style="font-size: 3rem; color: #007bff;"></i>
                    </div>
                    <h4>Tìm kiếm sách</h4>
                    <p>Tìm kiếm sách nhanh chóng với bộ lọc thông minh theo tên, tác giả, thể loại</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="ti-shopping-cart" style="font-size: 3rem; color: #28a745;"></i>
                    </div>
                    <h4>Mượn sách trực tuyến</h4>
                    <p>Mượn sách dễ dàng chỉ với vài cú click, không cần đến thư viện</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="ti-time" style="font-size: 3rem; color: #ffc107;"></i>
                    </div>
                    <h4>Quản lý lịch sử</h4>
                    <p>Theo dõi lịch sử mượn sách và quản lý thời gian trả sách</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card text-center">
                    <div class="stat-number">1000+</div>
                    <div class="stat-label">Sách trong kho</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card text-center">
                    <div class="stat-number">500+</div>
                    <div class="stat-label">Độc giả</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card text-center">
                    <div class="stat-number">50+</div>
                    <div class="stat-label">Thể loại sách</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-card text-center">
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Hỗ trợ trực tuyến</div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 80px 0;
    }
    
    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.2;
    }
    
    .hero-subtitle {
        font-size: 1.2rem;
        margin-bottom: 30px;
        opacity: 0.9;
    }
    
    .hero-buttons .btn {
        margin-right: 15px;
        margin-bottom: 10px;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
    }
    
    .hero-image img {
        border-radius: 15px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }
    
    /* Features Section */
    .features-section {
        padding: 80px 0;
    }
    
    .section-title h2 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 15px;
        color: #333;
    }
    
    .section-title p {
        font-size: 1.1rem;
        color: #666;
        max-width: 600px;
        margin: 0 auto;
    }
    
    .feature-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }
    
    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }
    
    .feature-card h4 {
        font-weight: 600;
        margin-bottom: 15px;
        color: #333;
    }
    
    .feature-card p {
        color: #666;
        line-height: 1.6;
    }
    
    /* Stats Section */
    .stats-section {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 60px 0;
    }
    
    .stat-card {
        padding: 30px 20px;
    }
    
    .stat-number {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 10px;
    }
    
    .stat-label {
        font-size: 1.1rem;
        opacity: 0.9;
    }
    
    /* Responsive */
    .hero-title {
        font-size: 2rem;
    }
    
    .hero-subtitle {
        font-size: 1rem;
    }
    
    .section-title h2 {
        font-size: 2rem;
    }
    
    .stat-number {
        font-size: 2rem;
    }
</style>
