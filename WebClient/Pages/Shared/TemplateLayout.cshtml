<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!--Favicon-->
    <link rel="shortcut icon" href="~/template/images/favicon.ico" type="image/x-icon">
    <!-- THEME CSS
    ================================================== -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/template/plugins/bootstrap/css/bootstrap.min.css">
    <!-- Themify -->
    <link rel="stylesheet" href="~/template/plugins/themify/css/themify-icons.css">
    <link rel="stylesheet" href="~/template/plugins/slick-carousel/slick-theme.css">
    <link rel="stylesheet" href="~/template/plugins/slick-carousel/slick.css">
    <!-- Slick Carousel -->
    <link rel="stylesheet" href="~/template/plugins/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/template/plugins/owl-carousel/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/template/plugins/magnific-popup/magnific-popup.css">
    <!-- manin stylesheet -->
    <link rel="stylesheet" href="~/template/css/style.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Room Styles -->
    <link rel="stylesheet" href="~/css/room-styles.css">
</head>
<body>
    <!-- Header -->
    <header class="header-top bg-grey justify-content-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-2 col-md-4 text-center d-none d-lg-block">
                    <a class="navbar-brand" href="/">
                        <img src="~/template/images/logo.png" alt="Library Management" class="img-fluid">
                    </a>
                </div>

                <div class="col-lg-8 col-md-12">
                    <nav class="navbar navbar-expand-lg navigation-2 navigation">
                        <a class="navbar-brand text-uppercase d-lg-none" href="/">
                            <img src="~/template/images/logo.png" alt="Library Management" class="img-fluid">
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse"
                                aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="ti-menu"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbar-collapse">
                            <ul id="menu" class="menu navbar-nav mx-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Trang chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Book/List">Danh sách sách</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Room/List">Đặt phòng</a>
                                </li>
                                @if (!string.IsNullOrEmpty(Context.Request.Cookies["JWToken"]))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="ti-user mr-1"></i>Tài khoản
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" href="/User/HistoryOrder">
                                                <i class="ti-time mr-2"></i>Lịch sử mượn sách
                                            </a>
                                            <a class="dropdown-item" href="/User/HistoryBooking">
                                                <i class="ti-home mr-2"></i>Lịch sử đặt phòng
                                            </a>
                                            <div class="dropdown-divider"></div>
                                            <form asp-page="/Auth/Login" asp-page-handler="Logout" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="ti-power-off mr-2"></i>Đăng xuất
                                                </button>
                                            </form>
                                        </div>
                                    </li>
                                }
                            </ul>

                            <ul class="list-inline mb-0 d-block d-lg-none">
                                <li class="list-inline-item"><a href="#"><i class="ti-facebook"></i></a></li>
                                <li class="list-inline-item"><a href="#"><i class="ti-twitter"></i></a></li>
                                <li class="list-inline-item"><a href="#"><i class="ti-linkedin"></i></a></li>
                                <li class="list-inline-item"><a href="#"><i class="ti-pinterest"></i></a></li>
                            </ul>
                        </div>
                    </nav>
                </div>

                <div class="col-lg-2 col-md-4 col-6">
                    <div class="header-socials-2 text-right d-none d-lg-block">
                        @if (string.IsNullOrEmpty(Context.Request.Cookies["JWToken"]))
                        {
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item">
                                    <a href="/Auth/Login" class="btn btn-primary btn-sm">
                                        <i class="ti-user mr-1"></i>Đăng nhập
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="/Auth/Register" class="btn btn-outline-primary btn-sm">
                                        <i class="ti-plus mr-1"></i>Đăng ký
                                    </a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item">
                                    <a href="/User/HistoryOrder" class="btn btn-outline-info btn-sm mr-2">
                                        <i class="ti-time mr-1"></i>Lịch sử mượn
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="/User/HistoryBooking" class="btn btn-outline-success btn-sm mr-2">
                                        <i class="ti-home mr-1"></i>Lịch sử đặt phòng
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <form asp-page="/Auth/Login" asp-page-handler="Logout" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="ti-power-off mr-1"></i>Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer-section section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="footer-widget">
                        <div class="footer-logo">
                            <img src="~/template/images/logo.png" alt="Library Management" class="img-fluid">
                        </div>
                        <p>Hệ thống quản lý thư viện hiện đại, cung cấp dịch vụ mượn sách và đặt phòng học trực tuyến tiện lợi.</p>
                        <div class="footer-social">
                            <a href="#"><i class="ti-facebook"></i></a>
                            <a href="#"><i class="ti-twitter"></i></a>
                            <a href="#"><i class="ti-linkedin"></i></a>
                            <a href="#"><i class="ti-pinterest"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6">
                    <div class="footer-widget">
                        <h4 class="widget-title">Liên kết</h4>
                        <ul class="footer-links">
                            <li><a href="/">Trang chủ</a></li>
                            <li><a href="/Book/List">Danh sách sách</a></li>
                            <li><a href="/Room/List">Đặt phòng</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h4 class="widget-title">Dịch vụ</h4>
                        <ul class="footer-links">
                            <li><a href="/Book/List">Tìm kiếm sách</a></li>
                            <li><a href="/Room/List">Đặt phòng học</a></li>
                            <li><a href="/User/HistoryOrder">Lịch sử mượn</a></li>
                            <li><a href="/User/HistoryBooking">Lịch sử đặt phòng</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h4 class="widget-title">Liên hệ</h4>
                        <div class="contact-info">
                            <p><i class="ti-location-pin"></i> Khu Giáo dục và Đào tạo, Hoa Lac Hi-tech Park, Km29 Đại lộ Thăng Long, Thạch Hoà, Thạch Thất, Hà Nội 13100</p>
                            <p><i class="ti-email"></i> info@library.com</p>
                            <p><i class="ti-mobile"></i> +84 123 456 789</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="footer-bottom">
                        <div class="row">
                            <div class="col-md-6">
                                <p>&copy; 2024 Library Management System. All rights reserved.</p>
                            </div>
                            <div class="col-md-6 text-right">
                                <p>Designed with <i class="ti-heart"></i> by Group 21</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/template/plugins/jquery/jquery.js"></script>
    <!-- Bootstrap jQuery -->
    <script src="~/template/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/template/plugins/bootstrap/js/popper.min.js"></script>
    <!-- Owl caeousel -->
    <script src="~/template/plugins/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/template/plugins/slick-carousel/slick.min.js"></script>
    <script src="~/template/plugins/magnific-popup/magnific-popup.js"></script>
    <!-- Instagram Feed Js -->
    <script src="~/template/plugins/instafeed-js/instafeed.min.js"></script>
    <!-- Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCC72vZw-6tGqFyRhhg5CkF2fqfILn2Tsw"></script>
    <script src="~/template/plugins/google-map/gmap.js"></script>
    <!-- main js -->
    <script src="~/template/js/custom.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
